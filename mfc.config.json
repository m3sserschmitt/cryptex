{
    "target": "./dist/bin/cryptex",
    "extensions": ["cc"],
    "c_flags": [
        "-I./cryptography/include"
        ],
    "ld_flags": [
        "./cryptography/libcryptography.so.*",
        "-lcrypto"
    ],
    "ignore_paths": [
    	"cryptography",
        ".idea",
        ".vscode",
        "controller",
        "dist",
        "scripts"
    ],
    "clean": true,
    "custom_targets": {
        "config": "python3 ./scripts/config.py -defaults -out config.json && cd cryptography && make",
        "setup": "python3 ./scripts/setup.py",
        "deps": "cd cryptography && make",
        "clean_deps": "cd cryptography && make clean"
    }
}
